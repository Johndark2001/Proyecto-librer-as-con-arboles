    private void guardadoLibroActionPerformed(java.awt.event.ActionEvent evt) {                                              
      String  codigoTexto = cajaRegistroLibro.getText ();  
       String titulo = cajaNombreLibro.getText();
        
            if (!codigoTexto.isEmpty() && !titulo.isEmpty()) {
                int codigo = Integer.parseInt(codigoTexto);
                 arbollibro.insertar( codigo , titulo);
            }
              //mensajeAgregado.setText("el usuario ha sido registrado exitosamente");
              cajaRegistroLibro.setText("");
              cajaNombreLibro.setText("");
              // Limpiar el campo de texto







'''GESTION USUARIO'''

import java.util.List;
import java.util.ArrayList;
import java.util.LinkedList;
import java.util.Scanner;

import java.util.Scanner;

import java.util.Scanner;
// public class gestionUsuarios{}


class Nodo {
    String dato;
    Nodo izquierda;
    Nodo derecha;
    

    public Nodo(String dato) {
        this.dato = dato;
        this.izquierda = null;
        this.derecha = null;
    }
}

class Arbol {
    Nodo raiz;

    public Arbol() {
        this.raiz = null;
    }
// metodo para insertar el usuario y guardarlo en el arbol
    public void insertar(String dato) {
        this.raiz = insertarRecursivo(this.raiz, dato);
    }

    private Nodo insertarRecursivo(Nodo nodo, String dato) {
        if (nodo == null) {
            return new Nodo(dato);
        }

        if (dato.compareTo(nodo.dato) < 0) {
            nodo.izquierda = insertarRecursivo(nodo.izquierda, dato);
        } else if (dato.compareTo(nodo.dato) > 0) {
            nodo.derecha = insertarRecursivo(nodo.derecha, dato);
        }
        return nodo;
    }
        // Buscar usuario
 public boolean buscarUsuario(String dato) {
        return buscarUsuarioRecursivo(raiz, dato);
    }

    private boolean buscarUsuarioRecursivo(Nodo nodo, String dato) {
        if (nodo == null) {
            // El usuario no está registrado
            return false;
        }

        if (nodo.dato.equals(dato)) {
            // El usuario está registrado
            return true;
        }

        // Buscar en el subárbol izquierdo o derecho según corresponda
        if (dato.compareTo(nodo.dato) < 0) {
            return buscarUsuarioRecursivo(nodo.izquierda, dato);
        } else {
            return buscarUsuarioRecursivo(nodo.derecha, dato);
        }
    }
            // metodo para listar los nombres en inorden 
     public String listarNombres() {
        StringBuilder resultado = new StringBuilder();
        inorden(raiz, resultado);
        return resultado.toString();
    }

    private void inorden(Nodo nodo, StringBuilder resultado) {
        if (nodo != null) {
            inorden(nodo.izquierda, resultado);

            
            resultado.append("Usuario: ").append(nodo.dato)
                    .append(" \n");

            inorden(nodo.derecha, resultado);
        }
    }
   
    
}







