'''LIBRO LISTAR DEVOLUCION PRESTAMO'''



import java.awt.Component;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import javax.swing.JFrame;
import javax.swing.JOptionPane;

// LibroListarDevolucionPrestamos{}

class TreeNode {
    int codigo;
    String titulo;
    int altura;
    TreeNode izquierdo;
    TreeNode derecho;
    boolean prestado;
    
  
    public TreeNode(int codigo, String titulo) {
        this.codigo = codigo;
        this.titulo = titulo;
        this.prestado =false;
        this.altura = 1;
        this.izquierdo = null;
        this.derecho = null;
    }
}

class BinaryTree {
    TreeNode raiz;

    public BinaryTree() {
        raiz = null;
    }

    // Insertar un libro en el árbol AVL
    public void insertar(int codigo, String titulo) {
        raiz = insertarRec(raiz, codigo, titulo);
    }

    private TreeNode insertarRec(TreeNode nodo, int codigo, String titulo) {
        if (nodo == null) {
            return new TreeNode(codigo, titulo);
        }

        if (codigo < nodo.codigo) {
            nodo.izquierdo = insertarRec(nodo.izquierdo, codigo, titulo);
        } else if (codigo > nodo.codigo) {
            nodo.derecho = insertarRec(nodo.derecho, codigo, titulo);
        } else {
            // El libro ya existe, no se permite duplicados
            return nodo;
        }

        // Actualizar la altura del nodo
        nodo.altura = 1 + Math.max(getAltura(nodo.izquierdo), getAltura(nodo.derecho));

        // Realizar rotaciones para mantener el equilibrio
        int balance = getBalance(nodo);

        // Rotación LL
        if (balance > 1 && codigo < nodo.izquierdo.codigo) {
            return rotacionDerecha(nodo);
        }

        // Rotación RR
        if (balance < -1 && codigo > nodo.derecho.codigo) {
            return rotacionIzquierda(nodo);
        }

        // Rotación LR
        if (balance > 1 && codigo > nodo.izquierdo.codigo) {
            nodo.izquierdo = rotacionIzquierda(nodo.izquierdo);
            return rotacionDerecha(nodo);
        }

        // Rotación RL
        if (balance < -1 && codigo < nodo.derecho.codigo) {
            nodo.derecho = rotacionDerecha(nodo.derecho);
            return rotacionIzquierda(nodo);
        }

        return nodo;
    }

    // Realizar rotación a la derecha
    private TreeNode rotacionDerecha(TreeNode y) {
        TreeNode x = y.izquierdo;
        TreeNode t2 = x.derecho;

        x.derecho = y;
        y.izquierdo = t2;

        y.altura = 1 + Math.max(getAltura(y.izquierdo), getAltura(y.derecho));
        x.altura = 1 + Math.max(getAltura(x.izquierdo), getAltura(x.derecho));

        return x;
    }

    // Realizar rotación a la izquierda
    private TreeNode rotacionIzquierda(TreeNode x) {
        TreeNode y = x.derecho;
        TreeNode t2 = y.izquierdo;

        y.izquierdo = x;
        x.derecho = t2;

        x.altura = 1 + Math.max(getAltura(x.izquierdo), getAltura(x.derecho));
        y.altura = 1 + Math.max(getAltura(y.izquierdo), getAltura(y.derecho));

        return y;
    }

    // Obtener la altura de un nodo
    private int getAltura(TreeNode nodo) {
        if (nodo == null) {
            return 0;
        }
        return nodo.altura;
    }

    // Obtener el factor de balance de un nodo
    private int getBalance(TreeNode nodo) {
        if (nodo == null) {
            return 0;
        }
        return getAltura(nodo.izquierdo) - getAltura(nodo.derecho);
    }

    // Buscar un libro por su código
    public TreeNode  buscar(int codigo) {
        return buscarRec(raiz, codigo);
    }

    private TreeNode buscarRec(TreeNode nodo, int codigo) {
        if (nodo == null) {
            return null;
        }

        if (codigo == nodo.codigo) {
            return nodo;
        } else if (codigo < nodo.codigo) {
            return buscarRec(nodo.izquierdo, codigo);
        } else {
            return buscarRec(nodo.derecho, codigo);
        }
    }

 public String inorderTraversal() {
        StringBuilder resultado = new StringBuilder();
        listarLibrosRecursivo(raiz, resultado);
        return resultado.toString();
    }

    private void listarLibrosRecursivo(TreeNode nodo, StringBuilder resultado) {
        if (nodo != null) {
            listarLibrosRecursivo(nodo.izquierdo, resultado);

            String estado = nodo.prestado ? "prestado" : "disponible";
            resultado.append("Código: ").append(nodo.codigo).append(", Título: ").append(nodo.titulo)
                    .append(" (").append(estado).append(")\n");

            listarLibrosRecursivo(nodo.derecho, resultado);
        }
    }
    public boolean prestarLibro(int codigo) {
        return prestarLibroRecursivo(raiz, codigo);
    }

    private boolean prestarLibroRecursivo(TreeNode nodo, int codigo) {
        if (nodo == null) {
            return false;
        }

        if (nodo.codigo == codigo) {
            if (nodo.prestado) {
                //el libro ya fue prestado
                return false;
            
            }else {
                nodo.prestado = true;
               return true; // prestamo realizado
            }
        }

        if (codigo < nodo.codigo) {
            return prestarLibroRecursivo(nodo.izquierdo, codigo);
        } else {
            return prestarLibroRecursivo(nodo.derecho, codigo);
        }
    }

public boolean devolverLibro(int codigo) {
        return devolverLibroRecursivo(raiz, codigo);
    }

    private boolean devolverLibroRecursivo(TreeNode nodo, int codigo) {
        if (nodo == null) {
            System.out.println("El libro no está registrado.");
            return false;
        }

        if (nodo.codigo == codigo) {
            if (!nodo.prestado) {
                System.out.println("El libro no estaba prestado.");
                return false;
            } else {
                nodo.prestado = false;
                System.out.println("El libro se devolvió con éxito.");
                return true;
            }
        }

        if (codigo < nodo.codigo) {
            return devolverLibroRecursivo(nodo.izquierdo, codigo);
        } else {
            return devolverLibroRecursivo(nodo.derecho, codigo);
        }
    }
}








'''LISTA DE LIBROS'''


public class ListaLibros extends javax.swing.JPanel {
private BinaryTree arbollibro ;
private void actualizarListaLibros() {
        
       espacioListado.append(arbollibro.inorderTraversal());
    }
 
    public ListaLibros(BinaryTree arbollibro) {
        this.arbollibro = arbollibro;
        initComponents();
        espacioListado.setEditable(false);
    }

    @SuppressWarnings("unchecked")
    // <editor-fold defaultstate="collapsed" desc="Generated Code">                          
