    private void AceptarLibroActionPerformed(java.awt.event.ActionEvent evt) {                                             
            try {
    String usuarioB = usuarioBuscar.getText();
    int codigo = Integer.parseInt(LibroPrestar.getText()); // Obtén el código ingresado
    boolean usuarioEncontrado = arbol.buscarUsuario(usuarioB);

    if (!usuarioEncontrado) {
        alerta.setText("El usuario no está registrado.");
    } else {
        boolean prestado = arbollibro.prestarLibro(codigo); // Llama a la función prestarLibroRecursivo

        if (prestado) {
            alerta.setText("El libro se prestó con éxito.");
        } else {
            alerta.setText("El libro ya está prestado o no se encontró.");
        }
    }

    usuarioBuscar.setText(""); // Limpiar el campo de texto
    LibroPrestar.setText(""); // Limpiar el campo de texto
} catch (NumberFormatException ex) {
    alerta.setText("Ingresa un código válido.");
}

             
        
     /*   
        
        String usuarioB = usuarioBuscar.getText();

        int codigo = Integer.parseInt(LibroPrestar.getText());
        arbollibro.prestarLibro(codigo);
        boolean libroEncontrado = arbollibro.prestarLibro(codigo);

  
        boolean usuarioEncontrado = arbol.buscarUsuario(usuarioB);

        if (usuarioEncontrado ) {
            alerta.setText("el usuario esta registrado");

        }
        usuarioBuscar.setText(""); // Limpiar el campo de texto
*/
    }                                            


